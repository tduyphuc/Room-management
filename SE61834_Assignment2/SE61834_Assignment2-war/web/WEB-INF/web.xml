<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ProcessServlet</servlet-name>
        <servlet-class>sample.servlet.ProcessServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>sample.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchRoomServlet</servlet-name>
        <servlet-class>sample.servlet.SearchRoomServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowAllServlet</servlet-name>
        <servlet-class>sample.servlet.ShowAllServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>sample.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadCateServlet</servlet-name>
        <servlet-class>sample.servlet.LoadCateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCateServlet</servlet-name>
        <servlet-class>sample.servlet.UpdateCateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateReportServlet</servlet-name>
        <servlet-class>sample.servlet.CreateReportServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DateFilterServlet</servlet-name>
        <servlet-class>sample.servlet.DateFilterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateReportServlet</servlet-name>
        <servlet-class>sample.servlet.UpdateReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProcessServlet</servlet-name>
        <url-pattern>/ProcessServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchRoomServlet</servlet-name>
        <url-pattern>/SearchRoomServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowAllServlet</servlet-name>
        <url-pattern>/ShowAllServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadCateServlet</servlet-name>
        <url-pattern>/LoadCateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCateServlet</servlet-name>
        <url-pattern>/UpdateCateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateReportServlet</servlet-name>
        <url-pattern>/CreateReportServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DateFilterServlet</servlet-name>
        <url-pattern>/DateFilterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateReportServlet</servlet-name>
        <url-pattern>/UpdateReportServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>ProcessServlet</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>401</error-code>
        <location>/ErrorPage/401.html</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/ErrorPage/403.html</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/ErrorPage/404.html</location>
    </error-page>
    <error-page>
        <error-code>408</error-code>
        <location>/ErrorPage/408.html</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/ErrorPage/500.html</location>
    </error-page>
</web-app>
